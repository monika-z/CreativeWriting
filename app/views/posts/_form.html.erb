<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> Nie można zapisać opowiadania, ponieważ:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Tytuł:' %><br>
    <%= f.text_field :title, :required => 'required' %>
  </div>
  <div class="field">
    <%= f.label 'Treść:' %><br>
    <%= f.text_area :content, :required => 'required' %>
  </div>
  <div class="field">
    <%= f.label 'Opis:' %><br>
    <%= f.text_area :summary, :required => 'required' %>
  </div>
  <div class="actions">
    <%= f.submit 'Gotowe' %>
  </div>
<% end %>
