<p id="notice"><%= notice %></p>
<div class="posts-list">
	<% if user_signed_in? %>


		<% if current_user.username == "admin" %>
			<div id ="admin">
				<div class="page-heading">
					<h1>Panel administratora</h1>
				</div>
				<p>
				<%= link_to "Dodaj nowy post do aktualności", new_post_path %>
				<%= link_to "Lista słów", words_path %> </p><p>
				<%= link_to "Lista słów dnia", trios_path %> 
				<%= link_to "Losuj nowe słowa dnia", rand_path, :method => :post, data: { confirm: 'Czy na pewno chcesz losować?' } %>
				</p><br /><br />
			</div>
			<div class="page-heading">
				<h1> Aktualności </h1>
			</div>
		<% else %>
			
			<div class="page-heading">
				<h1>Twoje opowiadania:</h1> 
			</div>
		<% end %>
	   	<% @posts.each do |post| %>
			<div class="posts-summary">
			     <div class="post-summary-header">
			    			<div class="heading">
					    		<div class="icon">
					    			<i class="fa fa-2x fa fa-book" aria-hidden="true"></i>
					    		</div>
					    		<h4> 
			       					<%= link_to post.title, post %> -&nbsp;<a href="/11_zygmunt/write/user/<%= post.user.username %>"><%= post.user.username %></a>
					    		</h4>
					    	</div>
							<div class="post-management">
						 		<% if current_user && (current_user == post.user || current_user.username == "admin") %>
						 			<%= link_to '<i class="fa fa-pencil-square" aria-hidden="true"></i>'.html_safe,
			 edit_post_path(post) %>&nbsp;&nbsp;|&nbsp;&nbsp;
									<%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, post, method: :delete, data: { confirm: 'Jesteś pewny/a, że chcesz usunąć?' } %>
						 		<% end %>
						 	</div>
							<div class="datetime">
								<%= post.created_at.in_time_zone("Europe/Warsaw").strftime('%d-%m-%Y %H:%M:%S') %> 
							</div>
				       	</div>
						<blockquote>
				        	<%= post.summary %>
				        </blockquote>
				        <div class="read-more">
			        		<% @a = post.comments.size %>
							<%= link_to "Komentarze: #{@a}", post %>
						</div>
			</div>
		<% end %>
	<% else %>
	<div class="page-heading">
		<h1>Nie jesteś zalogowany/a</h1>
	</div>

	<% end %>
</div>